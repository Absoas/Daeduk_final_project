@CHARSET "UTF-8";
.s-content {
	background-color: #f2f2f2;
	padding-top: 15px;;
	padding-bottom: 7.2rem;
	height: 500px;
}
.myinfo{
	border: 6px solid #4db8ff;
	width: 50%;
	margin: auto;
	padding: 20px;
	border-radius:15px;
	margin-top: 30px;
	margin-bottom: 40px;
}
.myinfo_my{
	list-style: none;
	display: inline-block;
	margin: auto;

}
.myinfo_coin{
	display: inline-block;
	margin-left: 150px;
}
.myinfo_coin_p{
	display: inline;
	margin-left: 20px;
	font-size:20px;
	font-weight: bold;
}

.mymenu{
	list-style: none;
	margin-left: 40%;

}
.mymenu li{
	float: left;
	width:100px;
	height:100px;
/* 	border: 3px solid #ffcc66; */
	border-radius:100px;
	text-align: center;
	padding-top: 27px;
	margin-left: 20px;
	background-color: #ffcc66
}
.mymenu li:hover{
	background-color: #80bfff;
}
.fa-address-book{
	color: white;
}
.fa-address-book:hover{
	color: white;
}
.fa-calendar-check{
	color: white;
}
.fa-calendar-check:hover{
	color: white;
}











